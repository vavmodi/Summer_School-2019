&GLOBAL
  PROJECT SPECTRA-QS 
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM 
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep              ! Electronic structure method (DFT,...)

  &DFT
    CHARGE 0
    MULTIPLICITY 1
    BASIS_SET_FILE_NAME  BASIS_MOLOPT 
    POTENTIAL_FILE_NAME  POTENTIAL      
    &SCF                        ! Parameters controlling the convergence of the scf. This section should not be changed. 
      SCF_GUESS RESTART 
      EPS_SCF 1.0E-6
      MAX_SCF 300
      &OT  T
        MINIMIZER  DIIS
        STEPSIZE     1.4999999999999999E-01
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
    &END SCF
    &QS
     METHOD GPW
     EPS_DEFAULT 1.0E-12
     EPS_FILTER_MATRIX 0
     EPS_PGF_ORB 1.0E-20
    &END QS
    &XC                        ! Parameters needed to compute the electronic exchange potential 
      &XC_FUNCTIONAL BLYP 
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
    &END XC
    &POISSON            
      PERIODIC NONE
      PSOLVER  WAVELET
    &END POISSON
  &END DFT

  &PROPERTIES
    &TDDFPT
       NSTATES      5
       MAX_ITER    10
       CONVERGENCE [eV] 1.0e-3
    &END TDDFPT
  &END PROPERTIES

  &SUBSYS
    &CELL
      ABC 20 20 20 
      PERIODIC NONE
    &END CELL
    &TOPOLOGY                    ! Section used to center the atomic coordinates in the given box. Useful for big molecules
      &CENTER_COORDINATES
      &END
      COORD_FILE_FORMAT xyz
      COORD_FILE_NAME init_vacuum.xyz
    &END
    &KIND H
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND C
      ELEMENT C
          BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q4
    &END KIND
    &KIND N
      ELEMENT N
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q5
    &END KIND
    &KIND O
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
